<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.breeze.boot.modules.flow.mapper.ProcessCategoryMapper">

    <resultMap id="BaseResultMap" type="com.breeze.boot.modules.flow.model.entity.ProcessCategory">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="categoryCode" column="category_code" jdbcType="VARCHAR"/>
        <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createName" column="create_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateName" column="update_name" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
        <result property="deleteBy" column="delete_by" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="listPage" resultType="com.breeze.boot.modules.flow.model.entity.ProcessCategory">
        SELECT id,
        category_code,
        category_name,
        create_by,
        create_name,
        create_time,
        tenant_id
        FROM process_category
        <where>
            is_delete = 0
            <if test="category.categoryName != null and category.categoryName != ''">
                AND category_name LIKE CONCAT('%', #{category.categoryName} ,'%')
            </if>
            <if test="category.categoryCode != null and category.categoryCode != ''">
                AND category_code LIKE CONCAT('%', #{category.categoryCode} ,'%')
            </if>
        </where>
    </select>

</mapper>
